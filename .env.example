# Required: Admin user authentication
ADMIN_PASSWORD=your_secure_password_here

# Optional: Admin user details (will use defaults if not specified)
ADMIN_USERNAME=tybuell
ADMIN_EMAIL=tybuell@sprinkler.local
ADMIN_FIRST_NAME=Tyler
